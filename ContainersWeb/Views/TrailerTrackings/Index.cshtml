@model IEnumerable<ContainersWeb.Models.ContainerTracking>
@using ContainersWeb.BLL
@using Resources

@section styles{
    <link href="~/Content/css/select2.min.css" rel="stylesheet" />
    @*<link href="~/Content/select2-bootstrap.css" rel="stylesheet" />*@
}

<div class="page-title">
    <i class="icon-custom-left"></i>
    <h3>@Resources.TrailerTracking</h3>
</div>

<div class="row-fluid">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index","Companies")" class="active">@Resources.Companies</a> </li>
        <li><a href="@Url.Action("Index","Drivers")" class="active">@Resources.Drivers</a> </li>
        <li><a href="@Url.Action("Index","SecuritySupervisors")" class="active">@Resources.SercuritySupervisor</a> </li>
    </ul>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>@Resources.TrailerTracking</h4>
                <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
            </div>
            <div class="grid-body ">

                <table class="table table-hover table-condensed" id="datatable">
                    <thead>
                        <tr>
                            <th>@Resources.Id</th>
                            <th>@Resources.TrailerNumber</th>
                            <th>@Resources.Type</th>
                            <th>@Resources.Status</th>
                            <th>@Resources.DocStatus</th>
                            <th>@Resources.Date</th>
                            @*<th>@Resources.TotalTime</th>*@
                            <th>@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", Resources.CreateNew, "Create", "TrailerTrackings", routeValues: null, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/DataTables-1.10.12/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables-1.10.12/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/modal.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            var id = '#datatable';

            var controller = 'TrailerTrackings';

            var columns =
            [
                        { data: 'TrailerTrackingId' },
                        { data: 'TrailerNumber' },
                        { data: 'Type' },
                        { data: 'ContainerStatus' },
                        { data: 'DocStatus' },
                        { data: 'Date'},
                        { data: 'ContainerTrackingId' }
            ];

            var url = '@Url.Action("GetTrailerTrackings")';

            var datatable = CreateTable(id, columns, url, controller);

            $(id).on('draw.dt', function () {
                LoadModal(id, columns, url, controller);
            });

        });
    </script>
}
