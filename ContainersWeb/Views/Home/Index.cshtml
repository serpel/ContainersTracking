@using Resources

@{
    double truckTotalPercent = Math.Round(((double)ViewBag.TruckReady / ViewBag.Trucks) * 100, 0);
    double containerTotalPercent = Math.Round(((double)ViewBag.ContainersReady / ViewBag.Containers) * 100, 0);
    double rastraTotalPercent = Math.Round(((double)ViewBag.RastraReady / ViewBag.Rastras) * 100, 0);
    double vehicleTotalPercent = Math.Round(((double)ViewBag.VehicleReady / ViewBag.Vehicles) * 100, 0);
    double courierTotalPercent = Math.Round(((double)ViewBag.CourierReady / ViewBag.Couriers) * 100, 0);
    double motoTotalPercent = Math.Round(((double)ViewBag.MotoReady / ViewBag.Motos) * 100, 0);
}
@*@section styles{
    <script src="~/Content/assets/plugins/bootstrap-select2/select2.min.js" type="text/javascript"></script>
